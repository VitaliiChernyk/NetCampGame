
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    @model GamePackman.Models.LoginData
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @addTagHelper *, AuthoringTagHelpers

}

<h2>Index</h2>
<p>Login using form below:</p>
<form method="post" asp-antiforgery="true" asp-action="Index" asp-controller="HomePage">
    <div asp-validation-summary="All" class="text-danger"></div>
    Username: <input asp-for="Username" value="username" /><br />
    Password: <input asp-for="Password" value="password" /><br />
    Remember me: <input asp-for="RememberMe" type="checkbox" /><br />
    <input type="submit" value="Login" />
</form>
<form id="authForm">
    <table>
        <tbody>
            <tr>
                <td>
                    <label id="Login">Login</label>
                </td>
                <td>
                    <input type="text" id="userLogin" />
                </td>
            </tr>
            <tr>
                <td>
                    <label id="Password">Passwrod</label>
                </td>
                <td>
                    <input type="password" id="userPassword" />
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td><input type="submit" name="Send" title="Send" /></td>
            </tr>
        </tfoot>
    </table>

    <div></div>
</form>

